# App Configuration
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Database
MONGO_URI=mongodb://your-mongodb-connection-string

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM_INFO=info@logatech.net
SMTP_FROM_BILLING=billing@logatech.net
SMTP_FROM_SUPPORT=support@logatech.net
SMTP_FROM_CONTACT=contact@logatech.net

# Firebase Client Configuration (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# Firebase Admin Configuration (Private)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key\n-----END PRIVATE KEY-----"

# Storage Configuration
NEXT_PUBLIC_STORAGE_STRATEGY=firebase

# CORS - Required when mobile app or another origin calls the API (e.g. Expo web)
# Dev: add Expo web origin. Example: ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081
# ALLOWED_ORIGINS=

# Optional - Debug & Development
NEXT_PUBLIC_ENABLE_API_DEBUG=false
NEXT_PUBLIC_ENABLE_NOTIFICATION_DEBUG=false
SECURE_AUTH_COOKIE=true
